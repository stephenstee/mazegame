<%- include("partials/header")%>
<style>
	body{
		background: #FF416C;  /* fallback for old browsers */
background: -webkit-linear-gradient(to right, #FF4B2B, #FF416C);  /* Chrome 10-25, Safari 5.1-6 */
background: linear-gradient(to right, #FF4B2B, #FF416C); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
	}
	form{
		background-color:white;
		width:60%;
		padding:30px;
		margin: 20px auto;
		border: 2px solid black;
		
	}
</style>
<div class="container">
	<div class="row">
		<div class="col-md-12 col-sm-12">
			<h1 class="text-center text-uppercase mt-3">
				Edit profile
			</h1>
			<form action="/home/<%=player._id%>?_method=PUT" method="POST">
				<div class="form-group">
					<label >Name:</label>
					<input type="text" value="<%=player.name%>" name="player[name]" class="form-control">
				</div>
				<div class="form-group">
	<label >Age:</label>
	<input type="text" value="<%=player.age%>" name="player[age]" class="form-control"> 			
				</div>
				<div class="form-group">
				<label >Gender:</label>
		<input type="text" name="player[gender]" value="<%=player.gender%>" class="form-control">
</div>
	
	
	<button type="submit" class="btn btn-md btn-outline-primary">Submit</button>
	<button type="reset" class="btn btn-md btn-outline-danger">Reset</button>
</form>

		</div>
	</div>
</div>

<%- include("partials/footer")%>
